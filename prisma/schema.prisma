generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role { USER ADMIN }
enum GiftStatus { SUCCEEDED REFUNDED FAILED }
enum MitzvahType { BAR BAT BNEI BNOT }

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  role       Role     @default(USER)
  connectId  String?
  events     Event[]
  createdAt  DateTime @default(now())
}

model Charity {
  id         String   @id @default(cuid())
  name       String
  email      String?
  createdAt  DateTime @default(now())
  gifts      Gift[]
}

model Event {
  id         String       @id @default(cuid())
  slug       String       @unique
  childName  String
  mitzvah    MitzvahType
  charityId  String
  charity    Charity      @relation(fields: [charityId], references: [id])
  hostId     String
  host       User         @relation(fields: [hostId], references: [id])
  createdAt  DateTime     @default(now())
  gifts      Gift[]
}

model Gift {
  id          String     @id @default(cuid())
  eventId     String
  event       Event      @relation(fields: [eventId], references: [id])
  amountCents Int
  status      GiftStatus @default(SUCCEEDED)
  createdAt   DateTime   @default(now())
}
