// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum GiftStatus {
  SUCCEEDED
  REFUNDED
  FAILED
}

enum MitzvahType {
  BAR
  BAT
  BNEI
  BNOT
}

model Charity {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  gifts     Gift[]   // Relation to Gift

  events    Event[]  // Relation to Event
}

model Gift {
  id         String      @id @default(uuid())
  amount     Int
  status     GiftStatus
  charity    Charity     @relation(fields: [charityId], references: [id])
  charityId  String
}

model Event {
  id         String       @id @default(uuid())
  name       String
  mitzvahType MitzvahType
  charity    Charity      @relation(fields: [charityId], references: [id])
  charityId  String
}
